server {
	listen		80;
	server_name	finance.ill.gold;
	rewrite ^(.*)$ https://$host$1 permanent;
}
server {
	listen      443 ssl http2;
	server_name finance.ill.gold;
	ssl_certificate		ssl/finance.ill.gold.crt;
	ssl_certificate_key	ssl/finance.ill.gold.key;
	ssl_protocols		TLSv1 TLSv1.1 TLSv1.2;
	index index.php index.htm index.html;
	root  /opt/case/finance;

	add_header X-Frame-Options "SAMEORIGIN";
	add_header X-XSS-Protection "1; mode=block";
    	add_header X-Content-Type-Options "nosniff";
	add_header Strict-Transport-Security "max-age=31536000";

	charset utf-8;
	autoindex off;

	error_page 404  /index.php;

	location = /favicon.ico {
		log_not_found off;
		access_log off;
	}

	location ~ /\.(?!well-known).* {
		deny all;
	}

	access_log   /opt/logs/nginx/finance.ill.gold.access.log main;
	error_log    /opt/logs/nginx/finance.ill.gold.error.log  warn;
}
